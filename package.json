{
  "name": "@sogebot/ui-public",
  "version": "1.0.12",
  "author": "sogehige@gmail.com",
  "description": "Nuxt.js version of ui-public",
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "prepublishOnly": "npm run generate",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{vue,css}\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint --fix",
    "*.{css,vue}": "stylelint"
  },
  "simple-git-hooks": {
    "pre-commit": "echo \"$2\" && npx simple-git-hooks && npx lint-staged",
    "commit-msg": "npx commitlint -e \"$1\"",
    "preserveUnused": true
  },
  "dependencies": {
    "@sogebot/ui-helpers": "^1.6.2",
    "core-js": "^3.10.1",
    "nuxt": "^2.15.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sogebot/ui-public.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@mdi/js": "^5.9.55",
    "@nuxt/types": "^2.15.4",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/vuetify": "^1.11.3",
    "@types/lodash-es": "^4.17.4",
    "@vue/composition-api": "^1.0.0-rc.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.9.0",
    "simple-git-hooks": "^2.4.1",
    "lint-staged": "^11.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "typeorm": "^0.2.32",
    "vuetify": "^2.4.9"
  }
}
